<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="top|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driver_history_title"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driver_history_subtitle"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <!-- Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/etDateFilter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Select date (dd/mm/yyyy)"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="10sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="48dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black" />

        <Button
            android:id="@+id/btnClearFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableDriverHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Header Row -->
                <TableRow
                    android:padding="12dp">

                    <TextView
                        android:text="@string/driver_history_route"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:minWidth="100dp"
                        android:gravity="center" />

                    <TextView
                        android:text="@string/driver_history_passengers"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:minWidth="120dp"
                        android:gravity="center" />

                    <TextView
                        android:text="@string/driver_history_date"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:minWidth="90dp"
                        android:gravity="center" />

                    <TextView
                        android:text="@string/driver_history_duration"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:minWidth="100dp"
                        android:gravity="center" />

                    <TextView
                        android:text="@string/driver_history_cancelled"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:minWidth="100dp"
                        android:gravity="center" />

                    <TextView
                        android:text="@string/driver_history_cost"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:minWidth="70dp"
                        android:gravity="center" />

                    <TextView
                        android:text="@string/driver_history_panic_button"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:minWidth="100dp"
                        android:gravity="center" />

                </TableRow>

                <!-- Horizontal line after header -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <!-- Horizontal line after each data row -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

            </TableLayout>

        </HorizontalScrollView>

    </ScrollView>


</LinearLayout>
