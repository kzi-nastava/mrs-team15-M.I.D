<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map taking full screen -->
    <com.example.ridenow.ui.components.RouteMapView
        android:id="@+id/routeMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay form at the top -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="top"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="?attr/colorSecondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_ride_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textColor="?attr/colorOnSecondary" />

            <!-- Start Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_ride_from"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/startAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_ride_loading"
                    android:textColor="?attr/colorOnSecondary"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- End Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_ride_to"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/endAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_ride_loading"
                    android:textColor="?attr/colorOnSecondary"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/reportInconsistencyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_ride_report_inconsistency"
                    android:layout_marginEnd="8dp"
                    style="@style/ButtonSecondary"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/panicButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_ride_panic"
                    android:layout_marginStart="8dp"
                    style="@style/ButtonDanger"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
