<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.ridenow.ui.components.RouteMapView
        android:id="@+id/routeMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?attr/colorSecondary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order your ride"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle preference"
                android:layout_marginTop="6dp"
                android:textColor="?attr/colorOnSecondary" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <Spinner
                    android:id="@+id/vehicleSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_arrow_drop_down_white"
                    android:contentDescription="" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <Switch
                    android:id="@+id/switchPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet friendly"
                    android:textColor="?attr/colorOnSecondary"
                    android:thumbTint="@color/switch_thumb_selector"
                    android:trackTint="@color/switch_track_selector" />
                <Switch
                    android:id="@+id/switchBaby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baby friendly"
                    android:layout_marginStart="16dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:thumbTint="@color/switch_thumb_selector"
                    android:trackTint="@color/switch_track_selector" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule ride"
                android:layout_marginTop="12dp"
                android:textColor="?attr/colorOnSecondary" />

            <EditText
                android:id="@+id/scheduledTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:hint="Select date and time"
                style="@style/TextInputOnDark"
                android:drawableEnd="@drawable/ic_calendar_white"
                android:drawablePadding="8dp"
                android:paddingEnd="12dp"
                android:contentDescription="Open calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest list"
                android:layout_marginTop="12dp"
                android:textColor="?attr/colorOnSecondary" />

            <LinearLayout
                android:id="@+id/guestsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/addGuestBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add guest" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add guest"
                    android:layout_marginStart="8dp"
                    android:textColor="?attr/colorOnSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/finalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/primary"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back" />
            </LinearLayout>

            <Button
                android:id="@+id/orderRideBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order ride"
                android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</FrameLayout>
