<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    style="@style/CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Ride ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ride_id_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimaryContainer" />

            <TextView
                android:id="@+id/rideIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_ride_id"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>

        <!-- Route Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/route_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/routeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_route"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Driver Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/driver_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimaryContainer" />

            <TextView
                android:id="@+id/driverNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_default"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>

        <!-- Passengers Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/passengers_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/passengersTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_default"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Start Time Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start_time_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimaryContainer" />

            <TextView
                android:id="@+id/startTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_default"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>

        <!-- Panic Status (only visible if panic is true) -->
        <TextView
            android:id="@+id/panicStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/panic_alert"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/danger"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/red_rounded_background"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
